<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="?android:attr/colorBackground"
             android:backgroundTint="?android:attr/textColorSecondaryNoDisable"
             tools:context="apps.aouexchange.StudentActivity.admin.ActivityDetailsFragment"
             tools:showIn="@layout/activity_details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/student_act_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="activity title"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/student_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:paddingEnd="6dp"

            android:text="TextView"
            android:textAlignment="center"
            android:textStyle="bold"
            tools:text="activity body"/>

        <TextView
            android:id="@+id/user_sender_no_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="87dp"
            android:text="userName"
            android:textStyle="bold"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="371dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/activivateBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Activate"/>

            <Button
                android:id="@+id/DeleteBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="delete"/>

        </LinearLayout>
    </LinearLayout>


</FrameLayout>
