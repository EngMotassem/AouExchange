<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context=".StudentActivity.addActivity.AddActivityFragment"
    tools:showIn="@layout/activity_add">


    <TextView
        android:id="@+id/titleBroadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/common_google_signin_btn_text_light_disabled"
        android:text="@string/addnewAct"
        android:textAlignment="center"
        android:textColorLink="@color/colorPrimaryDark"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/activity_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:hint="title" />

    <EditText
        android:id="@+id/activity_details"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"

        android:layout_marginTop="8dp"
        android:hint="subject"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/addBurron"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:text="add your activity"
        android:textColor="@color/common_google_signin_btn_text_light_pressed" />

    <Button
        android:id="@+id/btn_cancel_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="0dp"
        android:text="Cancel"
        android:textColor="@color/common_google_signin_btn_text_light_pressed" />


</LinearLayout>